#!/usr/bin/env python

import socket
from Database import *

TCP_IP='192.168.1.2'
print "IP: " + TCP_IP
TCP_PORT = 6666
BUFFER_SIZE = 1024  # Normally 1024, but we want fast response

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.bind((TCP_IP, TCP_PORT))
s.listen(1)

#conn, addr = s.accept()
#db=Database('Traffic_info','traffic','test123123')
#print 'Connection address:', addr
while 1:
    conn, addr = s.accept()
    data = conn.recv(BUFFER_SIZE)
    if not data: break
    print "Received from[%s] %s: via wifi" %(addr, data) 
    #attr={'message':data,'ip':str(addr[0]),'port':int(addr[1]),'time':'0'}
    #db.Insert('Test_msg',attr)
    #print "Message has been saved in the database"
    data = 'Echo[192.168.1.1:6666]: ' + data
    conn.send(data)  # echo
    conn.close()
print "Connection closed!"
conn.close()
